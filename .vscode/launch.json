        {
            "name": "Python: Object Detection",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/src/runner/detr_object_detection.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "args": ["--device", "cpu", "--config", "${cwd}/src/configs/object_detection/local.json"]
        }
    ]
